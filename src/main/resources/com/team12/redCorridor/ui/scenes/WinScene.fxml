<BorderPane prefHeight="450.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.team12.redCorridor.ui.controllers.WinSceneController">
   <top>
      <VBox alignment="CENTER" spacing="12.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Escaped">
               <font>
                  <Font name="System Bold" size="26.0" />
               </font>
            </Label>
            <Separator prefWidth="240.0" />
         </children>
         <padding>
            <Insets bottom="12.0" top="20.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <HBox alignment="CENTER" spacing="32.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="TOP_CENTER" spacing="12.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label alignment="TOP_CENTER" prefHeight="26.0" prefWidth="50.0" text="Map">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Separator />
                  <StackPane VBox.vgrow="ALWAYS">
                     <children>
                        <Pane fx:id="mapPane" maxHeight="Infinity" maxWidth="Infinity" prefHeight="280.0" prefWidth="280.0" style="-fx-border-color: black; -fx-background-color: transparent;" />
                     </children>
                     <padding>
                        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                  </padding>
                  </StackPane>
               </children>
               <padding>
                  <Insets left="24.0" right="24.0" />
               </padding>
            </VBox>
            <VBox prefWidth="260.0" spacing="10.0">
               <children>
                  <Label alignment="CENTER" prefHeight="26.0" prefWidth="335.0" text="Stats">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Separator />
                  <Label fx:id="fragmentsStatLabel" prefHeight="17.0" prefWidth="336.0" text="Fragments retrieved: --" />
                  <Label fx:id="dronesStatLabel" prefHeight="17.0" prefWidth="267.0" text="Drones triggered: --" />
                  <Label fx:id="trapsStatLabel" prefHeight="17.0" prefWidth="290.0" text="Hazards triggered: --" />
                  <Label fx:id="timeStatLabel" prefHeight="17.0" prefWidth="275.0" text="Time taken: --:--" />
                  <Label fx:id="healthStatLabel" prefHeight="17.0" prefWidth="305.0" text="Health remaining: --" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="16.0" left="24.0" right="24.0" />
         </padding>
      </HBox>
   </center>
   <bottom>
      <VBox spacing="8.0" BorderPane.alignment="CENTER">
         <children>
            <Separator />
            <HBox alignment="CENTER" spacing="16.0">
               <children>
                  <Label text="[N]ew Game" />
                  <Region prefHeight="17.0" prefWidth="182.0" HBox.hgrow="ALWAYS" />
                  <Label text="[L]obby" />
                  <Region layoutX="119.0" layoutY="22.0" prefHeight="17.0" prefWidth="225.0" HBox.hgrow="ALWAYS" />
                  <Label layoutX="643.0" layoutY="22.0" text="[Q]uit" />
               </children>
               <padding>
                  <Insets bottom="16.0" left="24.0" right="24.0" top="12.0" />
            </padding>
            </HBox>
         </children>
      </VBox>
   </bottom>
