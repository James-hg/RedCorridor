<BorderPane prefHeight="700.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.team12.redCorridor.ui.controllers.GameSceneController">
   <top>
      <VBox spacing="8.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane hgap="16.0" maxWidth="Infinity">
               <columnConstraints>
                  <ColumnConstraints halignment="CENTER" percentWidth="25.0" />
                  <ColumnConstraints halignment="CENTER" percentWidth="25.0" />
                  <ColumnConstraints halignment="CENTER" percentWidth="25.0" />
                  <ColumnConstraints halignment="CENTER" percentWidth="25.0" />
               </columnConstraints>
               <children>
                  <Label fx:id="hpLabel" text="HP: __/100" GridPane.columnIndex="0" />
                  <Label fx:id="medkitLabel" text="Medkits: _" GridPane.columnIndex="1" />
                  <Label fx:id="fragmentsLabel" text="Fragments: _/_" GridPane.columnIndex="2" />
                  <Label fx:id="timeLabel" text="Time: 00:00" GridPane.columnIndex="3" />
               </children>
               <padding>
                  <Insets left="16.0" right="16.0" top="16.0" />
               </padding>
               <rowConstraints>
                  <RowConstraints />
               </rowConstraints>
            </GridPane>
            <Separator />
            <VBox alignment="CENTER" spacing="4.0">
               <children>
                  <Label fx:id="roomNameLabel" text="Room">
                     <font>
                        <Font size="22.0" />
                     </font>
                  </Label>
                  <Label fx:id="messageLabel" text="Message" wrapText="true" />
               </children>
               <padding>
                  <Insets left="24.0" right="24.0" />
               </padding>
            </VBox>
            <Separator />
         </children>
      </VBox>
   </top>
   <center>
      <HBox alignment="CENTER" spacing="24.0" BorderPane.alignment="CENTER">
         <children>
            <StackPane HBox.hgrow="ALWAYS">
               <children>
                  <Pane fx:id="mapPane" maxHeight="Infinity" maxWidth="Infinity" prefHeight="320.0" prefWidth="320.0" style="-fx-border-color: black; -fx-background-color: transparent;" />
               </children>
               <padding>
                  <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
            </padding>
            </StackPane>
<!--            <VBox prefWidth="240.0" spacing="12.0">
               <children>
                  <Label alignment="CENTER" prefHeight="26.0" prefWidth="318.0" text="Map">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Separator />
                  <Label fx:id="roomItemsLabel" text="Room Items" wrapText="true" />
               </children>
            </VBox>-->
        </children>
         <padding>
            <Insets bottom="16.0" left="24.0" right="24.0" top="16.0" />
         </padding>
      </HBox>
   </center>
   <bottom>
      <VBox spacing="8.0" BorderPane.alignment="CENTER">
         <children>
            <Separator prefHeight="0.0" prefWidth="830.0" />
            <HBox alignment="CENTER" spacing="24.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="49.0" text="[H]elp" />
                  <Region prefHeight="17.0" prefWidth="471.0" HBox.hgrow="ALWAYS" />
                  <Label prefHeight="17.0" prefWidth="62.0" text="[L]obby" />
               </children>
               <padding>
                  <Insets bottom="16.0" left="24.0" right="24.0" />
            </padding>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>
